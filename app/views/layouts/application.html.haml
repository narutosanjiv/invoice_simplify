!!!
%html
  %head
    %title InvoiceSimplify
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %a.navbar-brand{:href => "/"} Invoice Simplify
        %ul.nav.navbar-nav
          %li{class: ('active' if request.path == '/')}
            %a{:href => item_index_path} Product
          
          - if current_user
            %li{class: ('active' if request.path == '/cart')}
              = link_to 'Shopping Cart', cart_orders_path
            
            %li{class: ('active' if request.path == '/invoices')}
              = link_to 'Invoices', invoices_path
            
            %li{class: ('active' if request.path == '/users/sign_out')}
              = link_to 'Sign Out', destroy_user_session_path, method: :delete 
            
          - else
            %li{class: ('active' if request.path == '/users/sign_in')}
              = link_to 'SignIn', new_user_session_path
            %li{class: ('active' if request.path == '/users/sign_up')}
              = link_to 'SignUp', new_user_registration_path
    = yield