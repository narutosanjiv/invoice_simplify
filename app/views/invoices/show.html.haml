.container
  
  .row
    .col-xs-12
      .invoice-title
        %h2 Invoice
        %h3.pull-right Order "#{@invoice.number}"
      %hr/
      .row
        .col-xs-6
          %address
            %strong Billed To:
            %br/
            = @address.name
            %br/
            = @address.street1
            %br/
            = @address.city
            %br/
            = "#{@address.state}, #{@address.country} #{@address.pincode}"
        .col-xs-6.text-right
          %address
            %strong Shipped To:
            %br/
            = @address.name
            %br/
            = @address.street1
            %br/
            = @address.city
            %br/
            = "#{@address.state}, #{@address.country} #{@address.pincode}"
      .row
        .col-xs-6
          %address
            %strong Payment Method:
            %br/
            Visa ending **** 4242
            %br/
            = @address.email
        .col-xs-6.text-right
          %address
            %strong Order Date:
            %br/
            = @invoice.date_at
            %br/
            %br/
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %strong Order summary
        .panel-body
          .table-responsive
            %table.table.table-condensed
              %thead
                %tr
                  %td
                    %strong Item
                  %td.text-center
                    %strong Price(USD)
                  %td.text-center
                    %strong Quantity
                  %td.text-right
                    %strong Totals(USD)
                  %td.text-right
                    %strong Totals(GBP)
              %tbody
                - @order.order_items.each do|order_item|
                  %tr
                    %td= order_item.item.title
                    %td.text-center= order_item.unit_price
                    %td.text-center= order_item.quantity 
                    %td.text-right= order_item.price
                    %td.text-right= Fixer.conversion_rates(expected_currency: "GBP", amount: order_item.price)

                %tr
                  %td.thick-line
                  %td.thick-line
                  %td.thick-line.text-center
                    %strong Subtotal
                  %td.thick-line.text-right= @invoice.total_price
                  %td.text-right= Fixer.conversion_rates(expected_currency: "GBP", amount: @invoice.total_price)
 
                %tr
                  %td.no-line
                  %td.no-line
                  %td.no-line.text-center
                    %strong Total(GBP)
                  %td.no-line.text-right= Fixer.conversion_rates(expected_currency: "GBP", amount: @invoice.total_price)